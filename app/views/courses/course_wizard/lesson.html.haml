= render layout: 'courses/course_wizard/step' do
  = simple_form_for @course, url: course_course_wizard_path, method: :put do |f|
    %h3 Lessons
    #lessons
    = f.simple_fields_for :lessons do |lesson|
      = render 'lesson_fields', f: lesson
    .links.mt-2
      = link_to_add_association  f, :lessons, class: 'btn btn-primary' do
        .fa.fa-plus.text-white
          Add lesson
    %br
    = f.submit class: 'btn btn-success'
  %br
  .card-footer.d-flex.justify-content-between
    = link_to next_wizard_path, class: 'btn btn-sm btn-info' do
      .fa.fa-arrow-right
      Skip
    = link_to previous_wizard_path, class: 'btn btn-sm btn-info' do
      .fa.fa-arrow-left
      Previous