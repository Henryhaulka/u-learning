.card
  .card-header
    .fa.fa-chalkboard
    = link_to course.title, course, class: 'text-decoration-none'
  .card-body
    = simple_format(course.short_description)

  .card-footer
    .text-center
      = subscribe_button(course)
      %p
      = review_course(course)
  .card-footer
    .row
      .col-md-6
        .fa.fa-star.text-warning
        %b 
          = course.average_rating
        (  
        .fa.fa-user-graduate
        = course.subscriptions_count  
        )
        %p
          .fa.fa-tasks
          = course.lessons_count
      .col-md-6
        .aligner
          .fa.fa-chalkboard-teacher
          = course.user.username
  .card-footer
    .far.fa-clock
    = course.created_at.strftime('%D')
  - if user_signed_in? &&  policy(course).edit?   
    .card-footer
      = link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning'
      = link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'
      - if policy(course).owner?
        = link_to new_course_lesson_path(course, @lesson), class: 'btn btn-sm btn-primary' do
          .fa.fa-plus
          Add a lesson
    .card-footer
      - if course.published?
        .badge.bg-success
          published
      - else
        .badge.badge-sm.bg-danger unpublished
      - if course.approved?
        .badge.bg-success  approved
      - else
        .badge.badge-sm.bg-danger  unapproved
    - if policy(course).approve?
      .card-footer
        - if course.approved?
          = link_to 'unapprove', unapprove_course_path(course),method: :patch, class: 'btn btn-danger'
        - else
          = link_to 'approve', approve_course_path(course), method: :patch, class: 'btn btn-success'
            
         

