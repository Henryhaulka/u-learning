.card
  .card-header
    .fa.fa-chalkboard
    = link_to course.title, course
  .card-body
    = simple_format(course.short_description)
  .card-footer
    .row
      .col-md-6
        .fa.fa-language
        = course.language
      .col-md-6
        .aligner
          .fa.fa-signal
          = course.level
  .card-footer
    .text-center
      .fa.fa-wallet
      = number_to_currency(course.price) 
  .card-footer
    .fa.fa-tasks
    = course.lessons.count
  .card-footer
    .row
      .col-md-6
        .fa.fa-chalkboard-teacher
        = course.user.username
      .col-md-6
        .aligner
          .far.fa-clock
          = course.created_at.strftime('%c')
  - if user_signed_in? &&  policy(course).edit?   
    .card-footer
      = link_to 'Edit', edit_course_path(course), class: 'btn btn-warning'
      = link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

  