%h3.text-center
  User Creation
/= line_chart @user.group_by_day(:created_at).count 
= line_chart charts_user_per_day_path
%h3.text-center 
  Subscriptions Created
/= column_chart @subscriptions.group_by_day(:created_at).count 
= column_chart charts_subscriptions_per_day_path
%h3.text-center
  Course Popularity
/= bar_chart @subscriptions.joins(:course).group("title").count
= bar_chart charts_course_popularity_path