- content_for :title do
  U-learning
  \|
  New subscription
.card
  .card-header
    %h3
      .fa.fa-book
      = link_to @course.title, @course
      %hr
      .fa.fa-lock-open
      Buy Course
  .card-body
    = form_tag course_subscriptions_path(@course) do
      =submit_tag "Pay #{@course.price}", class: 'btn btn-success'
  .card-footer
    = link_to "Back to All Courses", courses_path
